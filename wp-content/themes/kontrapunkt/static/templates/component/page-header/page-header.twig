{#
name: "Page - header"
#}
{% import '@macro/icons/icons.twig' as icons %}
{% extends "@component/component/component.twig" %}
{% set component = {
  'name': 'page-header',
  'id': content.wrapper_id,
  'classes': [
    'my-12 md:my-20 lg:my-24',
    content.variant == 'padding' ? '' : '!pb-0',
    content.wrapper_classes,
  ],
  'container': 'container max-w-4xl',
} %}

{% block content %}
{% if content.title %}
  {% set heading_attributes = create_attribute({
  class: [
    'text-gray-950 text-2xl sm:text-3xl font-bold leading-tight',
    content.variant == 'center' ? 'sm:text-center' : '',
  ]
}) %}
  <h1{{ heading_attributes }}>
    {{ content.title|typography }}
  </h1>
  {% if content.perex %}
    <div class="prose prose-lg prose-primary mt-4">
      {{ content.perex|typography }}
    </div>
  {% endif %}
{% else %}
  {{ component_alert({
    type: 'error',
    message:'Není zadán nadpis stránky',
  }) }}
{% endif %}
{% endblock %}
