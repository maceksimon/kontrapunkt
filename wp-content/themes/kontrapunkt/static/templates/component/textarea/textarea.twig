{% extends "@component/component/component.twig" %}
{% set component = {
  'name': 'textarea',
  'id': content.wrapper_id,
  'classes': [
    content.background ? 'bg-gray-100' : '',
    content.wrapper_classes
  ],
  'container': 'container py-12 md:py-20 lg:py-24',
  'heading': content.heading
} %}
{% block content %}
{% if content.text is not empty %}
  <div class="prose prose-lg max-w-full">
    {{- content.text|typography -}}
  </div>
{% endif %}
{% if content.image %}
  {% include '@component/picture/picture.twig'
    with {
      content: {
        image: content.image,
        image_classes: 'mt-4 md:mt-6 lg:mt-8'
      }
    }
  %}
{% endif %}
{% endblock %}
