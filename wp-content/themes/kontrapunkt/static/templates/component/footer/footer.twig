{% import '@macro/icons/icons.twig' as icons %}
{% extends "@component/component/component.twig" %}
{% block content %}
<footer class="bg-white mt-12 lg:mt-20 pb-8">
  <div class="container text-black text-lg">
    <div class="md:flex md:justify-between gap-12">
      <div>
        {{ component_social_icons({
          items: content.social_menu,
        }) }}
        {% if content.footer_menu|length %}
          <nav>
            <ul class="text-lg leading-loose">
              {% for item in content.footer_menu %}
                <li>
                  <a href="{{ item.url }}" class="underline hover:no-underline">
                    {{ item.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </nav>
        {% endif %}
      </div>
      <div>
        <div class="text-lg leading-loose md:text-right my-4 text-black">
          <div>{{- content.description|typography -}}</div>
        </div>
      </div>
    </div>
  </div>
</footer>
{% endblock %}
