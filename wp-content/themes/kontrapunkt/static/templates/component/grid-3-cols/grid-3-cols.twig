{#
name: "Grid - 3 columns"
#}
{% import '@macro/icons/icons.twig' as icons %}
{% extends "@component/component/component.twig" %}
{% set component = {
  'name': 'grid-3-columns',
  'tag': content.tag,
  'classes': [
    'grid grid-cols-1 gap-x-8 gap-y-12 sm:grid-cols-2 lg:grid-cols-3',
    content.wrapper_classes,
  ],
  'attributes': {
    'role': 'list',
  },
} %}
{% block content %}
  {% if content.inner_component %}
    {% if content.items|length %}
      {% for item in content.items %}
        {{ component( content.inner_component, item ) }}
      {% endfor %}
    {% else %}
      {{ component_alert({
        type: 'info',
        message: 'Momentálně tu nic nemáme. Prosím, přijďte se podívat později.',
      }) }}
    {% endif %}
  {% else %}
    {{ component_alert({
      'type': 'error',
      'container': content.inner ? '' : 'container',
      'message': 'Proměnná <strong>inner_component</strong> dení definována pro <i>grid-3-cols.twig</i>.',
    }) }}
  {% endif %}
{% endblock %}
