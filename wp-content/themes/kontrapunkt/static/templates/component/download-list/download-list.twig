{#
name: "Download - list"
#}
{% import '@macro/icons/icons.twig' as icons %}
{% extends "@component/component/component.twig" %}
{% set component = {
  'name': 'download-list',
  'id': content.wrapper_id,
  'classes': [
    content.inner ? '' : 'my-8 sm:my-10 lg:my-12',
    content.wrapper_classes,
  ],
  'container': content.inner ? '' : 'container',
  'heading': content.heading,
} %}
{% block content %}
  {% if content.items|length %}
    <div class="max-w-screen-md mx-auto">
      <ul role="list" class="space-y-4">
        {% for item in content.items %}
          <li class="max-w-80">
            {% if item.link.url is not empty %}
              <a download href="{{ item.link.url }}" target="_blank" class="group">
            {% endif %}
              <div class="py-2.5 px-5 border-l-2 border-black group-hover:border-primary flex items-center justify-between transition-colors">
                <div class="flex-1 flex items-center">
                  <span class="sr-only">{{ __("Download", "kontrapunkt") }}</span>
                  <span class="flex-1 truncate">
                    {% if item.title %}
                      {{ item.title }}
                    {% else %}
                      {{ __("Unnamed", "kontrapunkt") }}
                    {% endif %}
                  </span>
                </div>
                <div class="shrink-0 inline-block h-6 text-black group-hover:text-primary transition-colors">
                  {{ icons.get('paper-clip')}}
                </div>
              </div>
            {% if item.link.url is not empty %}
              </a>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </div>
  {% endif %}
{% endblock %}
