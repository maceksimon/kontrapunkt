{#
name: "Odkaz"
#}
{% import '@macro/icons/icons.twig' as icons %}
{% extends "@component/component/component.twig" %}
{% set component = {
  'name': 'link',
  'tag': 'a',
  'id': content.wrapper_id,
  'classes': [
    'flex items-center gap-3 group/link',
    content.wrapper_classes
  ],
  'target': content.target|default(null),
  'attributes': {
    'href': content.url,
    'target': content.target,
  }
} %}
{% block content %}
{% if content.icon_before %}
  <div class="shrink-0 h-5">{{ icons.get(content.icon_before )}}</div>
{% endif %}
<span class="underline lg:underline group-hover/link:lg:no-underline">{{ content.title|typography }}</span>
{% if content.icon_after %}
  <div class="shrink-0 h-5">{{ icons.get(content.icon_after )}}</div>
{% endif %}
{% endblock %}
