{% import '@macro/icons/icons.twig' as icons %}
{% extends "@component/component/component.twig" %}
{% set component = {
  'name': 'project-teaser',
  'classes': [
    content.wrapper_classes,
  ],
} %}

{% block content %}
<div class=" text-black">
  <div class="sm:flex space-y-6 sm:space-y-0 sm:space-x-8">
    <div class="w-24 h-24 max-w-full shrink-0 aspect-square border">
      {{ component_picture({
          image: content.image|resizer(['200', '200', '', 'crop']),
          image_classes: 'w-full h-full object-cover object-top',
          image_attributes: {
            loading: 'lazy',
          }
        })
      }}
    </div>
    <div class="space-y-2">
    {% if content.title %}
      <div class="text-xl font-semibold mb-4">
        {{ content.title|typography }}
      </div>
    {% endif %}
    {% if content.perex %}
      <div class="prose max-w-(--breakpoint-md)">
        {{ content.perex }}
      </div>
    {% endif %}
    </div>
  </div>
</div>
{% endblock %}
