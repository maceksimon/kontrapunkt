    }
  ],
  "homepage": "https://simonmacek.com",
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@wordpress/browserslist-config": "6.8.0",
    "autoprefixer": "^10.4.20",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "postcss-calc": "^8.2.4",
    "postcss-cli": "^10.1.0",
    "postcss-css-variables": "^0.18.0",
    "postcss-custom-media": "^8.0.2",
    "postcss-focus-within": "^6.1.1",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^5.0.6",
    "process": "^0.11.10",
    "sass": "^1.72.0",
    "svgo": "^3.3.2",
    "tailwindcss": "^3.4.12",
    "vite": "^6.0.11"
  },
  "dependencies": {
    "@drupal/once": "^1.0.1",
    "@fullcalendar/core": "^6.1.15",
    "@fullcalendar/daygrid": "^6.1.15",
    "alpinejs": "^3.14.1",
    "autosize": "^6.0.1",
    "js-cookie": "^3.0.5",
    "lightgallery": "^2.7.2",
    "swiper": "^11.1.14",
    "vanilla-cookieconsent": "3.0.1"
  },
  "scripts": {
    "start": "chokidar \"**/*.scss\" -c \"npm run build\" --initial",
    "build:style": "postcss src/css/style.css -o dist/css/style.css",
    "build:style:prod": "postcss src/css/style.css -o dist/css/style.css",
    "build:style:gutenberg": "sass src/scss/gutenberg.scss:dist/css/gutenberg.css --style=expanded --source-map --quiet",
    "build:js": "vite build --mode development",
    "build:js:prod": "vite build",
    "build:svg": "svgo images/icons",
    "build": "npm run build:style && npm run build:style:prod && npm run build:style:gutenberg && npm run build:js:prod",
    "watch:style": "postcss src/css/style.css -o dist/css/style.css --watch",
    "watch:js": "vite build --watch",
    "watch": "npm-run-all --parallel watch:style watch:js",
    "svgo": "svgo -f ./images/icons"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "packageManager": "yarn@4.1.1"
}
