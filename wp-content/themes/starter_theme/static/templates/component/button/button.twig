{% import '@macro/icons/icons.twig' as icons %}
{% extends "@component/component/component.twig" %}
{% set component = {
  'name': 'button',
  'tag': 'a',
  'id': content.wrapper_id,
  'classes': [
    'btn',
    content.wrapper_classes ? content.wrapper_classes|join(' ')|trim : 'btn-primary',
  ],
  'target': content.target|default(null),
  'attributes': {
    'href': content.url,
  }
} %}
{% block content %}
{% if content.icon_before %}
  {{ icons.get(content.icon_before )}}
{% endif %}
{{ content.title }}
{% if content.icon_after %}
  {{ icons.get(content.icon_after )}}
{% endif %}
{% endblock %}
